<Window x:Class="FinanceTracker.Views.TransactionFormWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:converters="clr-namespace:FinanceTracker.Converters"
        mc:Ignorable="d"
        Title="Добавить транзакцию" Height="320" Width="420"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize">
    <Window.Resources>
        <converters:DecimalConverter x:Key="DecimalConverter"/>
    </Window.Resources>
    <Grid Margin="16">
        <!-- Поля формы: Дата, Сумма, Категория, Описание -->
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <TextBlock Grid.Row="0" Grid.Column="0" Text="Дата:" VerticalAlignment="Center" Foreground="{StaticResource SecondaryText}" Margin="0,0,8,8"/>
        <DatePicker Grid.Row="0" Grid.Column="1" SelectedDate="{Binding Date, Mode=TwoWay}" Margin="0,0,0,8"/>
        <TextBlock Grid.Row="1" Grid.Column="1" Text="{Binding DateError}" Foreground="Red" FontSize="11" Margin="0,0,0,12"/>

        <TextBlock Grid.Row="2" Grid.Column="0" Text="Сумма:" VerticalAlignment="Center" Foreground="{StaticResource SecondaryText}" Margin="0,0,8,8"/>
        <TextBox Grid.Row="2" Grid.Column="1" Text="{Binding Amount, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged, Converter={StaticResource DecimalConverter}}" Margin="0,0,0,8"/>
        <TextBlock Grid.Row="3" Grid.Column="1" Text="{Binding AmountError}" Foreground="Red" FontSize="11" Margin="0,0,0,12"/>

        <TextBlock Grid.Row="4" Grid.Column="0" Text="Категория:" VerticalAlignment="Center" Foreground="{StaticResource SecondaryText}" Margin="0,0,8,8"/>
        <TextBox Grid.Row="4" Grid.Column="1" Text="{Binding Category, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" Margin="0,0,0,8"/>
        <TextBlock Grid.Row="5" Grid.Column="1" Text="{Binding CategoryError}" Foreground="Red" FontSize="11" Margin="0,0,0,12"/>

        <TextBlock Grid.Row="6" Grid.Column="0" Text="Описание:" VerticalAlignment="Center" Foreground="{StaticResource SecondaryText}" Margin="0,0,8,8"/>
        <TextBox Grid.Row="6" Grid.Column="1" Text="{Binding Description, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" Margin="0,0,0,12"/>

        <StackPanel Grid.Row="8" Grid.ColumnSpan="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,16,0,0">
            <Button Content="Сохранить" Command="{Binding SaveCommand}" Style="{StaticResource PrimaryButton}" Margin="0,0,8,0" IsDefault="True"/>
            <Button Content="Отмена" Command="{Binding CancelCommand}" Style="{StaticResource SecondaryButton}" IsCancel="True"/>
        </StackPanel>
    </Grid>
</Window>
