<Window x:Class="FinanceTracker.Views.TransactionFormWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:converters="clr-namespace:FinanceTracker.Converters"
        xmlns:controls="clr-namespace:FinanceTracker.Controls"
        mc:Ignorable="d"
        Title="Добавить транзакцию" Height="345" Width="460"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize"
        Background="{StaticResource WindowBackground}">
    <Window.Resources>
        <converters:DecimalConverter x:Key="DecimalConverter"/>
        <Style TargetType="TextBox" x:Key="DarkTextBox">
            <Setter Property="Background" Value="{StaticResource CardBackground}"/>
            <Setter Property="Foreground" Value="{StaticResource CardText}"/>
            <Setter Property="BorderBrush" Value="{StaticResource CardBorderDark}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="6,4"/>
            <Setter Property="CaretBrush" Value="{StaticResource CardText}"/>
            <Setter Property="FontSize" Value="12"/>
        </Style>
    </Window.Resources>
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Поля формы -->
        <Grid Grid.Row="0">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <TextBlock Grid.Row="0" Grid.Column="0" Text="Дата:" VerticalAlignment="Center" Foreground="{StaticResource CardText}" Margin="0,0,8,8"/>
            <controls:DarkDatePicker Grid.Row="0" Grid.Column="1" SelectedDate="{Binding Date, Mode=TwoWay}" Style="{StaticResource DarkDatePicker}" Margin="0,0,0,8"/>
            <TextBlock Grid.Row="1" Grid.Column="1" Text="{Binding DateError}" Foreground="Red" FontSize="11" Margin="0,0,0,12"/>

            <TextBlock Grid.Row="2" Grid.Column="0" Text="Сумма:" VerticalAlignment="Center" Foreground="{StaticResource CardText}" Margin="0,0,8,8"/>
            <TextBox Grid.Row="2" Grid.Column="1" Style="{StaticResource DarkTextBox}" Text="{Binding Amount, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged, Converter={StaticResource DecimalConverter}}" Margin="0,0,0,8"/>
            <TextBlock Grid.Row="3" Grid.Column="1" Text="{Binding AmountError}" Foreground="Red" FontSize="11" Margin="0,0,0,12"/>

            <TextBlock Grid.Row="4" Grid.Column="0" Text="Категория:" VerticalAlignment="Center" Foreground="{StaticResource CardText}" Margin="0,0,8,8"/>
            <TextBox Grid.Row="4" Grid.Column="1" Style="{StaticResource DarkTextBox}" Text="{Binding Category, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" Margin="0,0,0,8"/>
            <TextBlock Grid.Row="5" Grid.Column="1" Text="{Binding CategoryError}" Foreground="Red" FontSize="11" Margin="0,0,0,12"/>

            <TextBlock Grid.Row="6" Grid.Column="0" Text="Описание:" VerticalAlignment="Center" Foreground="{StaticResource CardText}" Margin="0,0,8,8"/>
            <TextBox Grid.Row="6" Grid.Column="1" Style="{StaticResource DarkTextBox}" Text="{Binding Description, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" Margin="0,0,0,0"/>
        </Grid>

        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,16,0,0">
            <Button Content="Сохранить" Command="{Binding SaveCommand}" Style="{StaticResource PrimaryButton}" Margin="0,0,8,0" IsDefault="True"/>
            <Button Content="Отмена" Command="{Binding CancelCommand}" Style="{StaticResource SecondaryButton}" IsCancel="True"/>
        </StackPanel>
    </Grid>
</Window>
