<Window x:Class="FinanceTracker.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:FinanceTracker.Views"
        xmlns:lvc="clr-namespace:LiveChartsCore.SkiaSharpView.WPF;assembly=LiveChartsCore.SkiaSharpView.WPF"
        mc:Ignorable="d"
        Title="Finance Tracker" Height="450" Width="800" WindowState="Maximized">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <!-- Кнопки управления -->
        <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="8">
            <Button Content="Добавить" Command="{Binding AddTransactionCommand}" Margin="0,0,8,0" Padding="12,6"/>
            <Button Content="Редактировать" Command="{Binding EditTransactionCommand}" Margin="0,0,8,0" Padding="12,6"/>
            <Button Content="Удалить" Command="{Binding DeleteTransactionCommand}" Margin="0,0,8,0" Padding="12,6"/>
            <Button Content="Обновить" Command="{Binding RefreshCommand}" Margin="0,0,8,0" Padding="12,6"/>
            <Button Content="Создать отчёт" Command="{Binding GenerateReportCommand}" Margin="0,0,8,0" Padding="12,6"/>
        </StackPanel>
        <!-- Ошибка отчёта (строка статуса) -->
        <TextBlock Grid.Row="1" Text="{Binding ReportError}" Foreground="Red" Margin="8,0"/>
        <!-- Фильтры по датам -->
        <StackPanel Grid.Row="2" Orientation="Horizontal" Margin="8">
            <TextBlock Text="С" VerticalAlignment="Center" Margin="0,0,4,0"/>
            <DatePicker SelectedDate="{Binding StartDateFilter, Mode=TwoWay}" Margin="0,0,16,0"/>
            <TextBlock Text="По" VerticalAlignment="Center" Margin="0,0,4,0"/>
            <DatePicker SelectedDate="{Binding EndDateFilter, Mode=TwoWay}"/>
        </StackPanel>
        <!-- Таблица слева, графики справа -->
        <Grid Grid.Row="3" Margin="8">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="400"/>
            </Grid.ColumnDefinitions>
            <DataGrid Grid.Column="0"
                      ItemsSource="{Binding Transactions}"
                      SelectedItem="{Binding SelectedTransaction, Mode=TwoWay}"
                      AutoGenerateColumns="False"
                      IsReadOnly="True"
                      Margin="0,0,8,0">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="Дата" Binding="{Binding Date, StringFormat=dd.MM.yyyy}" Width="100"/>
                    <DataGridTextColumn Header="Сумма" Binding="{Binding DisplayAmount}" Width="100"/>
                    <DataGridTextColumn Header="Категория" Binding="{Binding Category}" Width="*"/>
                    <DataGridTextColumn Header="Описание" Binding="{Binding Description}" Width="*"/>
                </DataGrid.Columns>
            </DataGrid>
            <StackPanel Grid.Column="1" Margin="8,0,0,0">
                <TextBlock Text="По категориям" FontWeight="SemiBold" Margin="0,0,0,4"/>
                <lvc:PieChart Series="{Binding CategoryChartSeries}" Height="250" Margin="0,0,0,16"/>
                <TextBlock Text="По месяцам" FontWeight="SemiBold" Margin="0,0,0,4"/>
                <lvc:CartesianChart Series="{Binding MonthChartSeries}" XAxes="{Binding MonthChartXAxes}" Height="250"/>
            </StackPanel>
        </Grid>
    </Grid>
</Window>
