<Window x:Class="FinanceTracker.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:FinanceTracker.Views"
        xmlns:lvc="clr-namespace:LiveChartsCore.SkiaSharpView.WPF;assembly=LiveChartsCore.SkiaSharpView.WPF"
        mc:Ignorable="d"
        Title="Finance Tracker" Height="450" Width="800" WindowState="Maximized">
    <Window.Resources>
        <BooleanToVisibilityConverter x:Key="BoolToVis"/>
        <Style x:Key="PrimaryButtonDimmedWhenGenerating" TargetType="Button" BasedOn="{StaticResource PrimaryButton}">
            <Style.Triggers>
                <DataTrigger Binding="{Binding IsReportGenerating}" Value="True">
                    <Setter Property="Opacity" Value="0.5"/>
                </DataTrigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>
    <Grid Background="{StaticResource WindowBackground}">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Toolbar: только кнопки транзакций -->
        <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="12,16">
            <Button Content="Добавить" Command="{Binding AddTransactionCommand}" Style="{StaticResource PrimaryButton}" Margin="0,0,8,0" ToolTip="Добавить новую транзакцию"/>
            <Button Content="Редактировать" Command="{Binding EditTransactionCommand}" Style="{StaticResource SecondaryButton}" Margin="0,0,8,0" ToolTip="Редактировать выбранную транзакцию"/>
            <Button Content="Удалить" Command="{Binding DeleteTransactionCommand}" Style="{StaticResource SecondaryButton}" Margin="0,0,8,0" ToolTip="Удалить выбранную транзакцию"/>
            <Button Content="Обновить" Command="{Binding RefreshCommand}" Style="{StaticResource SecondaryButton}" Margin="0,0,8,0" ToolTip="Обновить список транзакций"/>
        </StackPanel>

        <!-- Контент: две колонки — Транзакции | Аналитика -->
        <Grid Grid.Row="1" Margin="12,0,12,16">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="400"/>
            </Grid.ColumnDefinitions>

            <!-- Левая колонка: Транзакции -->
            <Border Grid.Column="0" Style="{StaticResource CardBorder}" Margin="0,0,16,0">
                <StackPanel>
                    <TextBlock Text="Транзакции" FontWeight="SemiBold" FontSize="14" Margin="0,0,0,12"/>
                    <StackPanel Orientation="Horizontal" Margin="0,0,0,12">
                        <TextBlock Text="Период:" VerticalAlignment="Center" Margin="0,0,8,0"/>
                        <DatePicker SelectedDate="{Binding StartDateFilter, Mode=TwoWay}" Margin="0,0,8,0"/>
                        <TextBlock Text="–" VerticalAlignment="Center" Margin="0,0,8,0"/>
                        <DatePicker SelectedDate="{Binding EndDateFilter, Mode=TwoWay}"/>
                    </StackPanel>
                    <TextBlock Text="Нет операций за период. Добавьте первую транзакцию."
                               Visibility="{Binding IsTransactionsEmpty, Converter={StaticResource BoolToVis}}"
                               Foreground="{StaticResource SecondaryText}"
                               TextAlignment="Center"
                               Margin="0,24,0,24"/>
                    <DataGrid ItemsSource="{Binding Transactions}"
                              SelectedItem="{Binding SelectedTransaction, Mode=TwoWay}"
                              AutoGenerateColumns="False"
                              IsReadOnly="True"
                              MinHeight="200"
                              Visibility="{Binding HasTransactions, Converter={StaticResource BoolToVis}}">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="Дата" Binding="{Binding Date, StringFormat=dd.MM.yyyy}" Width="100"/>
                            <DataGridTextColumn Header="Сумма" Binding="{Binding DisplayAmount}" Width="100"/>
                            <DataGridTextColumn Header="Категория" Binding="{Binding Category}" Width="*"/>
                            <DataGridTextColumn Header="Описание" Binding="{Binding Description}" Width="*"/>
                        </DataGrid.Columns>
                    </DataGrid>
                </StackPanel>
            </Border>

            <!-- Правая колонка: Аналитика -->
            <Border Grid.Column="1" Style="{StaticResource CardBorder}" Margin="16,0,0,0">
                <StackPanel>
                    <TextBlock Text="Аналитика" FontWeight="SemiBold" FontSize="14" Margin="0,0,0,12"/>
                    <StackPanel Orientation="Horizontal" Margin="0,0,0,8">
                        <TextBlock Text="Период:" VerticalAlignment="Center" Margin="0,0,8,0"/>
                        <DatePicker SelectedDate="{Binding ReportStartDate, Mode=TwoWay}" Margin="0,0,8,0"/>
                        <TextBlock Text="–" VerticalAlignment="Center" Margin="0,0,8,0"/>
                        <DatePicker SelectedDate="{Binding ReportEndDate, Mode=TwoWay}"/>
                    </StackPanel>
                    <StackPanel Orientation="Horizontal" Margin="0,0,0,8">
                        <ComboBox ItemsSource="{Binding ReportChartTypeItems}" SelectedItem="{Binding SelectedReportChartTypeItem, Mode=TwoWay}" DisplayMemberPath="Display" MinWidth="220" VerticalAlignment="Center" Margin="0,0,8,0" ToolTip="Тип отображаемых графиков: по категориям, по месяцам или оба"/>
                        <Button Content="Создать отчёт" Command="{Binding GenerateReportCommand}" Style="{StaticResource PrimaryButtonDimmedWhenGenerating}" ToolTip="Запуск аналитики по выбранному периоду"/>
                    </StackPanel>
                    <ProgressBar Style="{StaticResource ReportProgressBar}" Margin="0,0,0,12" Visibility="{Binding IsReportGenerating, Converter={StaticResource BoolToVis}}"/>
                    <TextBlock Text="{Binding ReportError}" Foreground="Red" Margin="0,0,0,8" TextWrapping="Wrap"/>
                    <TextBlock Text="{Binding ReportPromptMessage}" Visibility="{Binding IsReportPromptVisible, Converter={StaticResource BoolToVis}}" Margin="0,0,0,8" TextWrapping="Wrap"/>
                    <TextBlock Text="{Binding ReportEmptyMessage}" Visibility="{Binding IsReportEmptyMessageVisible, Converter={StaticResource BoolToVis}}" Foreground="Gray" Margin="0,0,0,8" TextWrapping="Wrap"/>
                    <StackPanel Visibility="{Binding IsCategoryChartVisible, Converter={StaticResource BoolToVis}}">
                        <TextBlock Text="По категориям" FontWeight="SemiBold" Margin="0,0,0,4"/>
                        <lvc:PieChart Series="{Binding CategoryChartSeries}" Height="250" Margin="0,0,0,16"/>
                    </StackPanel>
                    <StackPanel Visibility="{Binding IsMonthChartVisible, Converter={StaticResource BoolToVis}}">
                        <TextBlock Text="По месяцам" FontWeight="SemiBold" Margin="0,0,0,4"/>
                        <lvc:CartesianChart Series="{Binding MonthChartSeries}" XAxes="{Binding MonthChartXAxes}" Height="250"/>
                    </StackPanel>
                </StackPanel>
            </Border>
        </Grid>
    </Grid>
</Window>
